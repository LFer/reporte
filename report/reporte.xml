<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <report
        id="reporte_stock"
        string="Imprimir Reporte de Stock"
        model="product.product"
        report_type="qweb-pdf"
        file="reporte.reporte"
        name="reporte.reporte"
    />
<!--<t t-debug="pdb"/>-->

<template id="reporte">
        <t>
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <div class="page">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad Virtual</th>
                                        <th>Stock Minimo</th>
                                        <th>Cantidad Necesaria</th>
                                    </tr>
                               </thead>
                               <tbody class="sale_tbody">
                                    <tr t-foreach="stock" t-as="o">
                                        <td>
                                            <span t-esc="o.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.qty_available"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="o.stock_minimo"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="o.stock_minimo - o.qty_available"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
</template>
